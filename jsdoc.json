{
  "plugins": ["plugins/markdown"],

  "source": {
    "include": [
      "src/",
      "src/HDInterface",
      "src/explorer",
      "src/bip44",
      "src/secp256k1",
      "test",
      "test/fixtures",
      "test/integration"
    ],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "opts": {
    "destination": "../docs/farvault-lib/",
    "template": "node_modules/docdash"
  },
  "docdash": {
    "static": true,
    "sort": true,
    "search": true,
    "collapse": true,
    "typedefs": true,
    "removeQuotes": "none",
    "scripts": [],
    "menu": {
      "Farvault-lib Github repo": {
        "href": "https://github.com/farvault/farvault-lib",
        "target": "_blank",
        "class": "menu-item",
        "id": "repository"
      }
    }
  },
  "templates": {
    "default": {
      "useLongnameInNav": true
    }
  }
}
